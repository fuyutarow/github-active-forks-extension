{
  "name": "Twitter-hack",
  "description": "Helper to find active forks",
  "manifest_version": 2,
  "version": "0.2021.9",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "hot-reload.js"
    ]
  },
  "permissions": [
    "activeTab",
    "https://*",
    "tabs"
  ]
}