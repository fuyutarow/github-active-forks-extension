{
  "name": "Github Active Forks Extension",
  "description": "A Chrome extension to help you discover active forks",
  "manifest_version": 2,
  "version": "0.2021.6",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://github.com/*",
    "https://gist.github.com/*",
    "activeTab",
    "tabs"
  ]
}